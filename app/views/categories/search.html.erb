<div class='search-bar'>
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :query, params[:query], style: 'background: none; height: 33px; caret-color: #9154F3; border: none; outline: none; color: white; width: 79%; margin-top: 0;', autocomplete: 'off', placeholder: "search..." %>
    <%= submit_tag "", style: 'background: none; border: none; color: mediumpurple;'%>
  <% end %>
</div>
<% if @query %>
  <h2>Search Results for <%= @query %>:</h2>
  <ul>
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: "text-decoration-none" do %>
        <p> category:<%= category.name %></p>
      <% end %>
    <% end %>
    <% @channels.each do |channel| %>
      <%= link_to channel_path(channel), class: "text-decoration-none" do %>
        <p> <%= image_tag(channel.profile_image_url ) %><%= channel.display_name %></p>
      <% end %>
    <% end %>
  </ul>
  <% if @categories.empty? && @channels.empty? && @query %>
    <p>Nothing found</p>
  <% end %>
<% end %>
